#!/bin/sh
set -e

case $1 in
    configure|triggered)
        if [ -e /usr/share/desktop-base/kf5-settings/kdeglobals ]
        then
            sed -i "s/BrowserApplication=firefox-esr.desktop/BrowserApplication=chromium-browser.desktop/" \
                /usr/share/desktop-base/kf5-settings/kdeglobals
        fi
        ;;
esac
    
#DEBHELPER#

exit 0
