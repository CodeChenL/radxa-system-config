#!/bin/sh
set -e

case $1 in
    install|upgrade)
        conflicts="/usr/share/desktop-base/kf5-settings/kdeglobals"
        for i in $conflicts
        do
            dpkg-divert --package radxa-system-config-bookworm --divert "$i.bak" --rename "$i"
        done
        ;;
esac
    
#DEBHELPER#

exit 0